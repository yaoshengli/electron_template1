{
  
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "types": ["vite/client"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "/~/*": ["electron/*"],
      "/@/*": ["src/*"]
    }
  },
  "include": ["vite.config.ts", "package.json", "electron"]
}